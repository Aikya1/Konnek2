<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    // About Properties
    // https://gist.github.com/seanKenkeremath/c945c39cdf92af138395

    <!--Konnek2 Start-->
    <style name="AppTheme1" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- for TextInputLayout hint-->
    <style name="TextLabel">
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlActivated">@color/white</item>

    </style>

    <!--Konnek2 End-->

    <style name="Base.AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">

        <item name="windowActionModeOverlay">true</item>

        <item name="android:windowBackground">@color/bg_main</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlNormal">@color/dark_gray</item>
        <item name="android:colorControlNormal" tools:ignore="NewApi">@color/dark_gray</item>

        <item name="android:textColorPrimary">@color/black</item>
        <!--3 dots color in app-->
        <item name="android:textColorSecondary">@color/white</item>

        <item name="actionModeBackground">@color/action_mode_background</item>

        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="editTextStyle">@style/EditTextStyle</item>

        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="homeAsUpIndicator">@drawable/ic_app_back</item>

        <!-- Material Dialog theme -->
        <item name="md_dark_theme">false</item>

        <item name="searchViewStyle">@style/SearchViewStyle</item>

    </style>

    <style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/top_three_dots</item>
    </style>


    <style name="AppTheme" parent="Base.AppTheme" />

    <style name="ToolbarTheme">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="ToolbarThemeCall" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/light_gray</item>
    </style>

    <style name="Theme.MyTheme" parent="Theme.AppCompat">

    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchHintIcon">@null</item>
      <!--  <item name="closeIcon">@drawable/ic_close_btn_icon</item>
        <item name="queryBackground">@color/white</item>-->

    </style>

    <style name="VideoPlayerTheme" parent="android:Theme.Holo">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>


</resources>