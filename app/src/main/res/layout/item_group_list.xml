<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <TextView
        android:id="@+id/textview_group_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14sp"/>

    <ListView
        android:id="@+id/group_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_group_header"
        android:layout_marginTop="@dimen/margin_15dp"

        />

    <LinearLayout
        android:id="@+id/layout_chat_group_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_list"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_group_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_background_change"
            android:gravity="center"
            android:padding="@dimen/padding_5dp"
            android:text="@string/chat_confrence_call_ok"
            android:textColor="@color/white"/>

        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="#FF0000FF"/>

        <TextView
            android:id="@+id/textview_group_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_background_change"
            android:gravity="center"
            android:padding="@dimen/padding_5dp"
            android:text="@string/chat_confrence_call_cancel"
            android:textColor="@color/white"/>

    </LinearLayout>

</RelativeLayout>