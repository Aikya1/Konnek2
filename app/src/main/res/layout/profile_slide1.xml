<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <com.aikya.konnek2.ui.views.roundedimageview.RoundedImageView
        android:id="@+id/change_photo_view"
        style="@style/AvatarImageViewStyle.Common"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:contentDescription="@string/image_description"
        app:oval="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/change_photo_view"
        android:layout_marginTop="11dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="Take a selfie and status"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/image_userStatus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/textView"
        android:layout_alignLeft="@+id/change_photo_view"
        android:layout_alignStart="@+id/change_photo_view"
        android:layout_gravity="right|bottom"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="90dp"
        android:src="@drawable/camera_selfie" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/textView"
        android:layout_marginTop="10dp"
        android:background="#c0c0c0" />

    <EditText
        android:id="@+id/etstatus"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:drawableRight="@drawable/pencilsss"
        android:gravity="center|left"
        android:hint="Set your status"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        tools:ignore="RtlHardcoded" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/etstatus"
        android:layout_marginTop="10dp"
        android:background="#c0c0c0" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etstatus"
        android:layout_alignStart="@+id/etstatus"
        android:layout_below="@+id/view1"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:text="Preferred language for dictation :"
        android:textColor="@color/black"
        android:paddingStart="20dp" />

    <Spinner
        android:id="@+id/spin1"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv1"
        android:layout_alignStart="@+id/tv1"
        android:layout_below="@+id/tv2"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/gray"
        android:paddingLeft="20dp"
        android:textSize="20sp"
        android:paddingStart="20dp" />

</RelativeLayout>