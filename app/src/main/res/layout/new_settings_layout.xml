<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/image_description"
        app:layout_constraintBottom_toTopOf="@+id/guideline20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/placeholder_user" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <TextView
        android:id="@+id/nameTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:padding="@dimen/padding_5dp"
        android:text="@string/name"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="@+id/imageView10" />

    <TextView
        android:id="@+id/statusTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:padding="@dimen/padding_5dp"
        android:text="@string/status_text"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_14sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView10"
        app:layout_constraintTop_toBottomOf="@+id/nameTv"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/accountsTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/account_20_2x"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/account_20_2x"
        android:padding="@dimen/padding_5dp"
        android:text="@string/accounts_text"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView25" />

    <View
        android:id="@+id/view12"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="@color/light_gray"
        app:layout_constraintEnd_toEndOf="@+id/accountsTv"
        app:layout_constraintStart_toStartOf="@+id/accountsTv"
        app:layout_constraintTop_toBottomOf="@+id/accountsTv" />

    <TextView
        android:id="@+id/chatsTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/chats_20_2x"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/chats_20_2x"
        android:padding="@dimen/padding_5dp"
        android:text="@string/chats_text"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size16sp"
        app:layout_constraintEnd_toEndOf="@+id/accountsTv"
        app:layout_constraintStart_toStartOf="@+id/accountsTv"
        app:layout_constraintTop_toBottomOf="@+id/view12" />


    <View
        android:id="@+id/view13"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="@color/light_gray"
        app:layout_constraintEnd_toEndOf="@+id/accountsTv"
        app:layout_constraintStart_toStartOf="@+id/accountsTv"
        app:layout_constraintTop_toBottomOf="@+id/chatsTv" />

    <TextView
        android:id="@+id/notificationsTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/notifications_20_2x"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/notifications_20_2x"
        android:padding="@dimen/padding_5dp"
        android:text="@string/notifications_text"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size16sp"
        app:layout_constraintEnd_toEndOf="@+id/accountsTv"
        app:layout_constraintStart_toStartOf="@+id/accountsTv"
        app:layout_constraintTop_toBottomOf="@+id/view13" />


    <View
        android:id="@+id/view14"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="@color/light_gray"
        app:layout_constraintEnd_toEndOf="@+id/accountsTv"
        app:layout_constraintStart_toStartOf="@+id/accountsTv"
        app:layout_constraintTop_toBottomOf="@+id/notificationsTv" />

    <TextView
        android:id="@+id/dataUsageTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

        android:drawableLeft="@drawable/data_usage_20_2x"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/data_usage_20_2x"
        android:padding="@dimen/padding_5dp"
        android:text="@string/data_usage_text"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size16sp"
        app:layout_constraintEnd_toEndOf="@+id/accountsTv"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/accountsTv"
        app:layout_constraintTop_toBottomOf="@+id/view14" />

    <View
        android:id="@+id/view15"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="@color/light_gray"
        app:layout_constraintEnd_toEndOf="@+id/accountsTv"
        app:layout_constraintStart_toStartOf="@+id/accountsTv"
        app:layout_constraintTop_toBottomOf="@+id/dataUsageTv" />

    <TextView
        android:id="@+id/contactsTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/contact_us_20_2x"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/contact_us_20_2x"
        android:padding="@dimen/padding_5dp"
        android:text="@string/contacts_text"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size16sp"
        app:layout_constraintEnd_toEndOf="@+id/accountsTv"
        app:layout_constraintStart_toStartOf="@+id/accountsTv"
        app:layout_constraintTop_toBottomOf="@+id/view15" />

    <View
        android:id="@+id/view16"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="@color/light_gray"
        app:layout_constraintEnd_toEndOf="@+id/accountsTv"
        app:layout_constraintStart_toStartOf="@+id/accountsTv"
        app:layout_constraintTop_toBottomOf="@+id/contactsTv" />

    <TextView
        android:id="@+id/helpTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/help_20_2x"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/help_20_2x"
        android:padding="@dimen/padding_5dp"
        android:text="@string/help_text"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size16sp"
        app:layout_constraintEnd_toEndOf="@+id/accountsTv"
        app:layout_constraintStart_toStartOf="@+id/accountsTv"
        app:layout_constraintTop_toBottomOf="@+id/view16" />

    <View
        android:id="@+id/view17"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/light_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/accountsTv"
        app:layout_constraintStart_toStartOf="@+id/accountsTv"
        app:layout_constraintTop_toBottomOf="@+id/helpTv"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/light_gray"
        android:padding="@dimen/margin_8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline20" />

</android.support.constraint.ConstraintLayout>